{
  "extends": ["plugin:@typescript-eslint/recommended", "react-app", "plugin:jest/recommended", "plugin:prettier/recommended"],
  "plugins": ["react", "@typescript-eslint", "jest"],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": ["error", { "code": 150, "tabWidth": 2, "ignoreStrings": true }],
    "linebreak-style": "off",
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
